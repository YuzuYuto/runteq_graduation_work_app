<div class="container">
  <h1>お笑いネタ投稿アプリ</h1>

  <% if user_signed_in? %>
    <h2>ログイン成功!</h2>
    <p>ようこそ、<%= current_user.email %>さん</p>

    <%= link_to 'ログアウト', destroy_user_session_path, data: { "turbo-method": :delete } %>
