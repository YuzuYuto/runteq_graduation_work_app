<% content_for(:title, @post.title) %>

<div class="container">
  <div class="mb-3">
    <%= link_to posts_path, class: 'btn btn-outline-secondary btn-sm' do %>
      <i class="bi bi-arrow-left"></i> 投稿一覧に戻る
    <% end %>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <div class="border-bottom pb-3 mb-4">
        <h1 class="fw-bold text-primary mb-3">
          <%= @post.title %>
        </h1>
        <small class="text-muted">
          <i class="bi bi-person-circle"></i> <%= @post.user.email %>
          <span class="mx-2"> ・ </span>
          <i class="bi bi-calendar3"></i> <%= @post.created_at.strftime('%Y/%m/%d %H:%M') %>
        </small>
      </div>

      <div class="mb-4">
        <div class="text-dark" style="line-height: 1.8; white-space: pre-wrap;">
          <%= @post.body %>
        </div>
      </div>

      <% if @post.user == current_user %>
        <div class="border-top pt-3 d-flex gap-2">
          <%= link_to '編集', edit_post_path(@post), class: 'btn btn-outline-primary btn-sm' %>
          <%= link_to '削除', post_path(@post),
              data: {
                "turbo-method": :delete,
                "turbo-confirm": "本当に削除しますか?"
              },
              class: 'btn btn-outline-danger btn-sm' %>
        </div>
      <% end %>
    </div>
  </div>
</div>